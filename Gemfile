source 'https://rubygems.org'

gem 'rails', '3.2.13'

gem 'jquery-rails'
gem 'rails-i18n'
gem 'rspec-rails'
gem 'kaminari'
gem 'devise'
gem 'devise-i18n'

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'compass-rails'
  gem 'coffee-rails', '~> 3.2.1'

  # See https://github.com/sstephenson/execjs#readme for more supported runtimes
  gem 'therubyracer', :platforms => :ruby

  gem 'uglifier', '>= 1.0.3'
end

group :development do
  gem 'better_errors'
  gem 'pry-rails'
end

group :test do
  gem 'simplecov'
end

group :development, :test do
  gem 'sqlite3'
end
group :production do
  gem 'pg'
end

